{
  "name": "crud",
  "description": "Abstractions and assertion utilities to make enable the rapid building of CRUD based behaviors in your skill!",
  "version": "8.0.19",
  "skill": {
    "namespace": "crud"
  },
  "homepage": "https://github.com/sprucelabsai-community/spruce-crud-skill",
  "bugs": {
    "url": "https://github.com/sprucelabsai-community/spruce-crud-skill/issues"
  },
  "files": [
    "build"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "scripts": {
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "release": "semantic-release",
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn run build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "@sprucelabs/error": "^6.0.559",
    "@sprucelabs/globby": "^2.0.501",
    "@sprucelabs/heartwood-view-controllers": "^115.0.0",
    "@sprucelabs/mercury-client": "^42.0.670",
    "@sprucelabs/mercury-core-events": "^25.0.115",
    "@sprucelabs/mercury-types": "^47.0.649",
    "@sprucelabs/schema": "^31.0.9",
    "@sprucelabs/spruce-core-schemas": "^40.1.594",
    "@sprucelabs/spruce-event-plugin": "^64.0.0",
    "@sprucelabs/spruce-event-utils": "^40.1.378",
    "@sprucelabs/spruce-form-utils": "^18.5.60",
    "@sprucelabs/spruce-permission-plugin": "^34.0.0",
    "@sprucelabs/spruce-skill-booter": "^64.0.0",
    "@sprucelabs/spruce-skill-utils": "^31.1.16",
    "@sprucelabs/spruce-view-plugin": "^49.0.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^6.0.535",
    "@sprucelabs/jest-json-reporter": "^8.0.561",
    "@sprucelabs/jest-sheets-reporter": "^3.0.198",
    "@sprucelabs/resolve-path-aliases": "^2.0.524",
    "@sprucelabs/semantic-release": "^5.0.2",
    "@sprucelabs/spruce-test-fixtures": "^64.0.0",
    "@sprucelabs/test": "^9.0.65",
    "@sprucelabs/test-utils": "^5.1.536",
    "@types/node": "^22.10.5",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.17.0",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "yarn": "1.x"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
